<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/details_frame_height_size"
    android:id="@+id/pledge_frame">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/doctor_pledge_details_image" />

        <Button
            android:id="@+id/yes_button"
            android:layout_width="@dimen/pledge_button_width_size"
            android:layout_height="@dimen/pledge_button_height_size"
            android:background="@drawable/green_butten_round"
            android:text="YES"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/submit_btn_text_size"
            android:textStyle="italic"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/pledge_yes_left_margin" />

        <Button
            android:id="@+id/no_button"
            android:layout_width="@dimen/pledge_button_width_size"
            android:layout_height="@dimen/pledge_button_height_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="44dp"
            android:background="@drawable/red_butten_round"
            android:text="NO"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/submit_btn_text_size"
            android:textStyle="italic" />
    </RelativeLayout>
</FrameLayout>